<tr id=<%= "book_#{book.id}"%>>
    <td><%= book.name %></td>
    <td><%= book.price %></td>
    <td><%= book.book_category.name %></td>
    <td><%= book.book_format.name %></td>
    <td><%= link_to t(:edit), edit_book_path(book), remote: true %> | 
    <%= link_to t(:destroy), book, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
</tr>
